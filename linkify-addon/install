$path = getcwd();
$name = "linkify-addon";
$addons = "/lib/addons/";
$files = array(
	'linkify.php'
);

	// Variables
if($argv[1] == "play") {
	
	copy($path."/instruments/".$name."/files/".$files['0'], $path.$addons.$files['0']);
	echo "CREATED :: ".$files['0']."\n";
	
}